<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/rl"
    tools:context="com.benjamin.smartgarden.MainActivity"

    >

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/button8"
        android:layout_below="@+id/mypots"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:onClick="ViewData"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:onClick="ViewData"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Gardens"
        android:id="@+id/mygardens"
        android:layout_above="@+id/button2"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"

        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Pots"
        android:id="@+id/mypots"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/button3"
        android:layout_below="@+id/mypots"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:onClick="ViewData"

        />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"

        android:id="@+id/button"

        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/mygardens"
        android:layout_marginTop="57dp"
        android:visibility="invisible"
        android:layout_alignEnd="@+id/button5"
        android:onClick="ViewData"

        />

    <Button
        android:text="Button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/button5"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/mypots"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:onClick="ViewData"

        />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/button6"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button4"
        android:visibility="invisible"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:onClick="ViewData"

        />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/button4"
        android:visibility="invisible"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true"
        android:onClick="ViewData"

        />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/button7"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignParentEnd="true"
        android:onClick="ViewData"

        />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/mypots"
        android:id="@+id/button9"
        android:onClick="ViewData"

        />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/mygardens"
        android:layout_marginStart="25dp"
        android:id="@+id/textView" />


</RelativeLayout>
